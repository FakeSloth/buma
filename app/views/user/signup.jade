extends ../layouts/base

block content
  .col-md-6.col-md-offset-3
    h1.text-center Sign up
    form
      .form-group
        label Email
        input.form-control(type="email" placeholder="Enter your email")
      .form-group
        label Username
        input.form-control(type="text" placeholder="Username")
      .form-group
        label Password
        input.form-control(type="text" placeholder="Password")
      .text-center
        button.btn.btn-primary(type="submit") Create an account
